---
import Layout from "@/layouts/main.astro";
import {
  getAllCategories,
  getCategoryStats,
  getProjectMetadata,
} from "@/data/projects";

const categories = getAllCategories();
const categoryStats = getCategoryStats();
const totalProjects = Object.values(categoryStats).reduce((sum, count) => sum + count, 0);
const metadata = getProjectMetadata();
---

<Layout
  title={`Categories - ${metadata.title}`}
  description={`Browse ${totalProjects} projects across ${categories.length} categories. Explore different types of resources organized into meaningful groups.`}
  keywords={[...metadata.keywords, "categories", "browse"]}
  author={metadata.author.name}
>
  <!-- Page Header -->
  <section class="border-b bg-gradient-to-b from-background to-secondary/20">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-4">
          Browse by Category
        </h1>
        <p class="text-xl text-muted-foreground">
          Explore {totalProjects} projects across {categories.length} different categories.
        </p>
      </div>
    </div>
  </section>

  <!-- Categories Grid -->
  <section class="py-12 md:py-16">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          categories.map((category) => {
            const count = categoryStats[category] || 0;
            const categorySlug = category.toLowerCase().replace(/\s+/g, "-");

            return (
              <a
                href={`/categories/${encodeURIComponent(categorySlug)}`}
                class="group relative overflow-hidden rounded-lg border bg-card transition-all hover:shadow-lg"
              >
                <div class="p-6">
                  <div class="flex items-start justify-between gap-4 mb-3">
                    <h3 class="text-xl font-semibold group-hover:text-primary transition-colors">
                      {category}
                    </h3>
                    <svg
                      class="h-5 w-5 text-muted-foreground group-hover:text-primary group-hover:translate-x-1 transition-all"
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="M5 12h14" />
                      <path d="m12 5 7 7-7 7" />
                    </svg>
                  </div>
                  <p class="text-sm text-muted-foreground">
                    {count} {count === 1 ? "project" : "projects"}
                  </p>
                </div>
                <div class="absolute inset-0 border-2 border-transparent group-hover:border-primary rounded-lg transition-colors pointer-events-none" />
              </a>
            );
          })
        }
      </div>

      {categories.length === 0 && (
        <div class="text-center py-12">
          <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-secondary mb-4">
            <svg
              class="h-8 w-8 text-muted-foreground"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M3 3h18v18H3zM9 9h6v6H9z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">No categories found</h3>
          <p class="text-muted-foreground">
            Check back later for categorized projects.
          </p>
        </div>
      )}
    </div>
  </section>
</Layout>