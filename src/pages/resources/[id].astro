---
import type { GetStaticPaths } from "astro";
import {
  getAllResources,
  getProjectMetadata,
  getResourceById,
  getResourceName,
} from "@/data/projects";
import Layout from "@/layouts/main.astro";

export const getStaticPaths = (() => {
  const resources = getAllResources();
  return resources.map((resource) => ({
    params: { id: resource.id },
    props: { resource },
  }));
}) satisfies GetStaticPaths;

const { resource } = Astro.props;
const name = getResourceName(resource);
const metadata = getProjectMetadata();

// Format dates
const formatDate = (dateString?: string) => {
  if (!dateString) return null;
  return new Date(dateString).toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
};
---

<Layout
        title={`${name} - ${metadata.title}`}
        description={resource.description}
        keywords={[...metadata.keywords, ...resource.tags]}
        author={metadata.author.name}
>
    <!-- Project Header -->
    <section class="border-b bg-gradient-to-b from-background to-secondary/20">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16">
            <div class="max-w-4xl">
                <!-- Breadcrumb -->
                <nav class="flex items-center gap-2 text-sm text-muted-foreground mb-6">
                    <a href="/" class="hover:text-foreground transition-colors">Home</a>
                    <span>/</span>
                    <a href="/resources" class="hover:text-foreground transition-colors">Resources</a>
                    <span>/</span>
                    <span class="text-foreground">{name}</span>
                </nav>

                <!-- Title and Category -->
                <div class="flex items-start justify-between gap-4 mb-4">
                    <h1 class="text-4xl md:text-5xl font-bold tracking-tight">{name}</h1>
                    <span class="inline-flex items-center rounded-full bg-primary/10 px-3 py-1 text-sm font-semibold text-primary whitespace-nowrap">
            {resource.category}
          </span>
                </div>

                <!-- Description -->
                <p class="text-xl text-muted-foreground mb-6">{resource.description}</p>

                <!-- Quick Actions -->
                <div class="flex flex-wrap gap-3">
                    <a
                            href={resource.url}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="inline-flex items-center justify-center rounded-lg text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring bg-primary text-primary-foreground hover:bg-primary/90 h-11 px-6 gap-2"
                    >
                        Visit Resource
                        <svg
                                class="h-4 w-4"
                                xmlns="http://www.w3.org/2000/svg"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                        >
                            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                            <polyline points="15 3 21 3 21 9"/>
                            <line x1="10" x2="21" y1="14" y2="3"/>
                        </svg>
                    </a>
                    {resource.repository && (
                            <a
                                    href={resource.repository}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="inline-flex items-center justify-center rounded-lg text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring border border-input bg-background hover:bg-accent hover:text-accent-foreground h-11 px-6 gap-2"
                            >
                                <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
                                     fill="currentColor">
                                    <path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"/>
                                </svg>
                                GitHub
                            </a>
                    )}
                    {resource.documentation && (
                            <a
                                    href={resource.documentation}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="inline-flex items-center justify-center rounded-lg text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring border border-input bg-background hover:bg-accent hover:text-accent-foreground h-11 px-6 gap-2"
                            >
                                <svg
                                        class="h-4 w-4"
                                        xmlns="http://www.w3.org/2000/svg"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                >
                                    <path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"/>
                                </svg>
                                Documentation
                            </a>
                    )}
                </div>
            </div>
        </div>
    </section>

    <!-- Project Details -->
    <section class="py-12 md:py-16">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Main Content -->
                <div class="lg:col-span-2 space-y-8">
                    <!-- Tags -->
                    {resource.tags && resource.tags.length > 0 && (
                            <div>
                                <h2 class="text-2xl font-bold mb-4">Tags</h2>
                                <div class="flex flex-wrap gap-2">
                                    {resource.tags.map((tag) => (
                                            <span class="inline-flex items-center rounded-md bg-secondary px-3 py-1.5 text-sm text-secondary-foreground">
                    {tag}
                  </span>
                                    ))}
                                </div>
                            </div>
                    )}

                    <!-- Features (for tools) -->
                    {resource.features && resource.features.length > 0 && (
                            <div>
                                <h2 class="text-2xl font-bold mb-4">Features</h2>
                                <ul class="space-y-2">
                                    {resource.features.map((feature) => (
                                            <li class="flex items-start gap-2">
                                                <svg
                                                        class="h-5 w-5 text-primary mt-0.5"
                                                        xmlns="http://www.w3.org/2000/svg"
                                                        viewBox="0 0 24 24"
                                                        fill="none"
                                                        stroke="currentColor"
                                                        stroke-width="2"
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                >
                                                    <polyline points="20 6 9 17 4 12"/>
                                                </svg>
                                                <span>{feature}</span>
                                            </li>
                                    ))}
                                </ul>
                            </div>
                    )}

                    <!-- Prerequisites (for courses) -->
                    {resource.prerequisites && resource.prerequisites.length > 0 && (
                            <div>
                                <h2 class="text-2xl font-bold mb-4">Prerequisites</h2>
                                <ul class="space-y-2">
                                    {resource.prerequisites.map((prereq) => (
                                            <li class="flex items-start gap-2">
                                                <span class="text-muted-foreground">â€¢</span>
                                                <span>{prereq}</span>
                                            </li>
                                    ))}
                                </ul>
                            </div>
                    )}
                </div>

                <!-- Sidebar -->
                <div class="lg:col-span-1">
                    <div class="sticky top-24 space-y-6">
                        <!-- Stats Card -->
                        <div class="rounded-lg border bg-card p-6 space-y-4">
                            <h3 class="font-semibold">Resource Information</h3>

                            {resource.stars !== undefined && (
                                    <div class="flex items-center justify-between">
                                        <span class="text-sm text-muted-foreground">Stars</span>
                                        <span class="font-medium">{resource.stars.toLocaleString()}</span>
                                    </div>
                            )}

                            {resource.downloads && (
                                    <div class="flex items-center justify-between">
                                        <span class="text-sm text-muted-foreground">Downloads</span>
                                        <span class="font-medium">{resource.downloads}</span>
                                    </div>
                            )}

                            {resource.forks !== undefined && (
                                    <div class="flex items-center justify-between">
                                        <span class="text-sm text-muted-foreground">Forks</span>
                                        <span class="font-medium">{resource.forks.toLocaleString()}</span>
                                    </div>
                            )}

                            {resource.license && (
                                    <div class="flex items-center justify-between">
                                        <span class="text-sm text-muted-foreground">License</span>
                                        <span class="font-medium">{resource.license}</span>
                                    </div>
                            )}

                            {resource.version && (
                                    <div class="flex items-center justify-between">
                                        <span class="text-sm text-muted-foreground">Version</span>
                                        <span class="font-medium">{resource.version}</span>
                                    </div>
                            )}

                            {resource.primaryLanguage && (
                                    <div class="flex items-center justify-between">
                                        <span class="text-sm text-muted-foreground">Language</span>
                                        <span class="font-medium">{resource.primaryLanguage}</span>
                                    </div>
                            )}

                            {resource.difficulty && (
                                    <div class="flex items-center justify-between">
                                        <span class="text-sm text-muted-foreground">Difficulty</span>
                                        <span class="font-medium capitalize">{resource.difficulty}</span>
                                    </div>
                            )}

                            {resource.accessLevel && (
                                    <div class="flex items-center justify-between">
                                        <span class="text-sm text-muted-foreground">Access</span>
                                        <span class="font-medium capitalize">{resource.accessLevel}</span>
                                    </div>
                            )}

                            {resource.lastUpdated && (
                                    <div class="flex items-center justify-between">
                                        <span class="text-sm text-muted-foreground">Last Updated</span>
                                        <span class="font-medium">{formatDate(resource.lastUpdated)}</span>
                                    </div>
                            )}
                        </div>

                        <!-- Additional Info for specific types -->
                        {resource.type === "course" && (
                                <div class="rounded-lg border bg-card p-6 space-y-4">
                                    <h3 class="font-semibold">Course Details</h3>

                                    {resource.instructor && (
                                            <div class="flex items-center justify-between">
                                                <span class="text-sm text-muted-foreground">Instructor</span>
                                                <span class="font-medium">{resource.instructor}</span>
                                            </div>
                                    )}

                                    {resource.duration && (
                                            <div class="flex items-center justify-between">
                                                <span class="text-sm text-muted-foreground">Duration</span>
                                                <span class="font-medium">{resource.duration}</span>
                                            </div>
                                    )}

                                    {resource.students !== undefined && (
                                            <div class="flex items-center justify-between">
                                                <span class="text-sm text-muted-foreground">Students</span>
                                                <span class="font-medium">{resource.students.toLocaleString()}</span>
                                            </div>
                                    )}

                                    {resource.rating !== undefined && (
                                            <div class="flex items-center justify-between">
                                                <span class="text-sm text-muted-foreground">Rating</span>
                                                <span class="font-medium flex items-center gap-1">
                      {resource.rating}
                                                    <svg class="h-4 w-4 fill-yellow-400 stroke-yellow-400"
                                                         xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
                                                         stroke-width="2">
                        <polygon
                                points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                      </svg>
                    </span>
                                            </div>
                                    )}
                                </div>
                        )}

                        {resource.type === "video" && resource.views !== undefined && (
                                <div class="rounded-lg border bg-card p-6 space-y-4">
                                    <h3 class="font-semibold">Video Stats</h3>

                                    <div class="flex items-center justify-between">
                                        <span class="text-sm text-muted-foreground">Views</span>
                                        <span class="font-medium">{resource.views.toLocaleString()}</span>
                                    </div>

                                    {resource.duration && (
                                            <div class="flex items-center justify-between">
                                                <span class="text-sm text-muted-foreground">Duration</span>
                                                <span class="font-medium">{resource.duration}</span>
                                            </div>
                                    )}
                                </div>
                        )}
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>