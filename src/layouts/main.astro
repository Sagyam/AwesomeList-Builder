---
import "../styles/global.css";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import {getSEOMetadata, getProjectMetadata} from "@/lib/utils/data-access";

interface Props {
  title?: string;
  description?: string;
  author?: string;
  keywords?: string[];
  ogImage?: string;
  noIndex?: boolean;
}

// Get metadata from project.yaml
const seoMetadata = getSEOMetadata();
const projectMetadata = getProjectMetadata();

const {
  title = seoMetadata.title,
  description = seoMetadata.description,
  author = seoMetadata.author,
  keywords = seoMetadata.keywords,
  ogImage = "/og-image.png",
  noIndex = false,
} = Astro.props;

const canonicalURL = projectMetadata.homepage ? new URL(Astro.url.pathname, projectMetadata.homepage) : (Astro.site ? new URL(Astro.url.pathname, Astro.site) : null);
const ogImageURL = canonicalURL ? new URL(ogImage, canonicalURL.origin) : null;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content={author} />
    {keywords.length > 0 && <meta name="keywords" content={keywords.join(", ")} />}
    {canonicalURL && <link rel="canonical" href={canonicalURL} />}

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    {canonicalURL && <meta property="og:url" content={canonicalURL} />}
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {ogImageURL && <meta property="og:image" content={ogImageURL} />}

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    {canonicalURL && <meta property="twitter:url" content={canonicalURL} />}
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    {ogImageURL && <meta property="twitter:image" content={ogImageURL} />}

    <!-- Robots -->
    {noIndex && <meta name="robots" content="noindex, nofollow" />}

    <!-- Theme Color -->
    <meta name="theme-color" content="#ffffff" />
  </head>
  <body class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
