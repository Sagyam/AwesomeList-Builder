---
import { BookOpen } from "lucide-react";
import { MobileNav } from "@/components/MobileNav";
// Header component with navigation
import { ThemeToggle } from "@/components/ThemeToggle";

const navLinks = [
  { href: "/", label: "Home" },
  { href: "/resources", label: "Resources" },
  { href: "/about", label: "About" },
];
---

<header class="border-b bg-background sticky top-0 z-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo and Title -->
      <div class="flex items-center gap-2">
        <a href="/" class="flex items-center gap-2 transition-opacity hover:opacity-80">
          <BookOpen className="h-8 w-8 text-primary"/>
          <span class="text-xl font-bold">AwesomeKit</span>
        </a>
      </div>

      <!-- Navigation -->
      <nav class="hidden md:flex items-center gap-6">
        <a
          href="/"
          class="text-sm font-medium text-foreground/60 transition-colors hover:text-foreground"
        >
          Home
        </a>
        <a
            href="/resources"
          class="text-sm font-medium text-foreground/60 transition-colors hover:text-foreground"
        >
            Resources
        </a>
        <a
          href="/about"
          class="text-sm font-medium text-foreground/60 transition-colors hover:text-foreground"
        >
          About
        </a>
      </nav>

      <!-- Action Buttons -->
      <div class="flex items-center gap-4">
          <!-- Theme Toggle -->
          <ThemeToggle client:load/>

        <!-- Mobile Menu -->
        <MobileNav client:load links={navLinks}/>
      </div>
    </div>
  </div>
</header>