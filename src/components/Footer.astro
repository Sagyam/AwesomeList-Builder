---
import { BookOpen, ExternalLink, Github, Twitter } from "lucide-react";
import { getProjectMetadata } from "@/lib/utils/data-access";

const currentYear = new Date().getFullYear();
const metadata = getProjectMetadata();
---

<footer class="border-t bg-background">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Brand Section -->
      <div class="md:col-span-2">
        <div class="flex items-center gap-2 mb-4">
          <BookOpen className="h-6 w-6 text-primary"/>
          <span class="text-lg font-bold">{metadata.title}</span>
        </div>
        <p class="text-sm text-muted-foreground max-w-md">
          {metadata.description}
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="font-semibold mb-4">Quick Links</h3>
        <ul class="space-y-3">
          <li>
            <a
              href="/"
              class="text-sm text-muted-foreground transition-colors hover:text-foreground"
            >
              Home
            </a>
          </li>
          <li>
            <a
                href="/resources"
              class="text-sm text-muted-foreground transition-colors hover:text-foreground"
            >
              Resources
            </a>
          </li>
          <li>
            <a
              href="/about"
              class="text-sm text-muted-foreground transition-colors hover:text-foreground"
            >
              About
            </a>
          </li>
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h3 class="font-semibold mb-4">Resources</h3>
        <ul class="space-y-3">
          <li>
            <a
              href="/docs"
              class="text-sm text-muted-foreground transition-colors hover:text-foreground"
            >
              Documentation
            </a>
          </li>
          {metadata.repository && (
            <li>
              <a
                href={metadata.repository.url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm text-muted-foreground transition-colors hover:text-foreground inline-flex items-center gap-1"
              >
                GitHub
                <ExternalLink className="h-3 w-3"/>
              </a>
            </li>
          )}
          <li>
            <a
              href="/submit"
              class="text-sm text-muted-foreground transition-colors hover:text-foreground"
            >
              Submit a Project
            </a>
          </li>
          <li>
            <a
              href="/rss"
              class="text-sm text-muted-foreground transition-colors hover:text-foreground"
            >
              RSS Feed
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="mt-12 pt-8 border-t">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-sm text-muted-foreground">
          Â© {currentYear} {metadata.title}. {metadata.license ? `Licensed under ${metadata.license}.` : ''} Built with Astro, React, and Tailwind CSS.
        </p>
        <div class="flex items-center gap-6">
          {metadata.repository && (
            <a
              href={metadata.repository.url}
              target="_blank"
              rel="noopener noreferrer"
              class="text-muted-foreground transition-colors hover:text-foreground"
              aria-label="GitHub"
            >
              <Github className="h-5 w-5"/>
            </a>
          )}
          {metadata.social?.twitter && (
            <a
              href={`https://twitter.com/${metadata.social.twitter}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-muted-foreground transition-colors hover:text-foreground"
              aria-label="Twitter"
            >
              <Twitter className="h-5 w-5"/>
            </a>
          )}
        </div>
      </div>
    </div>
  </div>
</footer>